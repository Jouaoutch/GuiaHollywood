<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_root"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="10dp"
              >
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:gravity="center_horizontal">
        <Button android:layout_width="wrap_content" android:text="Eliminar Alarme" android:layout_height="wrap_content" android:id="@+id/eliminarAlarmeButton" android:visibility="gone"></Button>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ver info do filme" android:id="@+id/verInfoButton"></Button>
    </LinearLayout>
    <TextView android:layout_width="wrap_content" android:id="@+id/textView1" android:layout_height="wrap_content" android:text="Nota: Ao eliminar o alarme da base de dados não está a eliminar o alarme do calendário. Para o fazer tem de ir à aplicação do calendário."></TextView>
</LinearLayout>